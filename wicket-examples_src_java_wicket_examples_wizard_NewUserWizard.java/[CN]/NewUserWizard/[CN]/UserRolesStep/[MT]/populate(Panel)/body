{
  final ListMultipleChoice rolesChoiceField=new ListMultipleChoice<String>(contentPanel,"user.roles",allRoles);
  final TextField<String> rolesSetNameField=new TextField<String>(contentPanel,"user.rolesSetName");
  add(new AbstractFormValidator(){
    public FormComponent[] getDependentFormComponents(){
      return null;
    }
    public void validate(    Form form){
      String rolesInput=rolesChoiceField.getInput();
      if (rolesInput != null && (!"".equals(rolesInput))) {
        if ("".equals(rolesSetNameField.getInput())) {
          rolesSetNameField.error(Collections.singletonList("error.noSetNameForRoles"),null);
        }
      }
    }
  }
);
}
