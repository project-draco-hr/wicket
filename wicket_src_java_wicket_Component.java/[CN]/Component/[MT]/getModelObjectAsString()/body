{
  IModel model=getModel();
  if (model != null) {
    final Object property=model.getObject();
    if (property != null) {
      final String modelString=(property instanceof String) ? (String)property : String.valueOf(property);
      if (shouldEscapeModelStrings) {
        return Strings.escapeMarkup(modelString);
      }
      return modelString;
    }
  }
  return "";
}
