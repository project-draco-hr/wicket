{
  if (key != null) {
    final String tagAttributeValue=tag.getAttributes().getString(key);
    if (tagAttributeValue == null || !value.equalsIgnoreCase(tagAttributeValue)) {
      findMarkupStream().throwMarkupException("Component " + getName() + " must be applied to a tag with '"+ key+ "' attribute matching '"+ value+ "', not '"+ tagAttributeValue+ "'");
    }
  }
}
