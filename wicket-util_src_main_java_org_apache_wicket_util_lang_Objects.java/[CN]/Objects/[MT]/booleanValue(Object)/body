{
  if (value == null) {
    return false;
  }
  Class<?> c=value.getClass();
  if (c == Boolean.class) {
    return ((Boolean)value).booleanValue();
  }
  if (c == Character.class) {
    return ((Character)value).charValue() != 0;
  }
  if (value instanceof Number) {
    return ((Number)value).doubleValue() != 0;
  }
  return true;
}
