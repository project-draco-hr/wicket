{
  super(parameters);
  setStatelessHint(true);
  add(new RepeatingView("links"){
    @Override protected void onPopulate(){
      removeAll();
      for (int c=0; c < count; c++) {
        add(new StatelessLink<Void>(newChildId()){
          @Override public void onComponentTagBody(          MarkupStream markupStream,          ComponentTag openTag){
            super.replaceComponentTagBody(markupStream,openTag,"LINK-" + getId());
          }
          @Override public void onClick(){
            count++;
          }
        }
);
      }
    }
  }
);
}
