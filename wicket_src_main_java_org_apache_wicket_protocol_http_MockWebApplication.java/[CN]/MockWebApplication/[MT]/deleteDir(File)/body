{
  if (dir != null && dir.isDirectory()) {
    File[] files=dir.listFiles();
    if (files != null) {
      for (int i=0; i < files.length; i++) {
        File element=files[i];
        if (element.isDirectory()) {
          deleteDir(element);
        }
 else {
          element.delete();
        }
      }
    }
    dir.delete();
  }
}
