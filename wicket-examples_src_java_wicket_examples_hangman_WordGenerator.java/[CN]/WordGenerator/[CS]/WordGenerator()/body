{
  try {
    final IResourceStream resource=new ClassLoaderResourceStreamLocator().locate(null,"wicket/examples/hangman/WordList","",Locale.getDefault(),".txt");
    final String wordlist=Streams.readString(resource.getInputStream());
    this.words=Arrays.asList(wordlist.split("\\s+"));
    shuffle();
  }
 catch (  IOException e) {
    throw new RuntimeException("Couldn't read word list");
  }
catch (  ResourceStreamNotFoundException e) {
    throw new RuntimeException("Couldn't read word list");
  }
}
