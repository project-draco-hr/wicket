{
  for (int j=0; j < 5; ++j) {
    for (int i=0; i < 10; ++i) {
      if (folder.mkdirs()) {
        return true;
      }
    }
    try {
      Thread.sleep(100);
    }
 catch (    InterruptedException ix) {
      Thread.currentThread().interrupt();
    }
  }
  logger.error("Failed to create directory: " + folder);
  return false;
}
