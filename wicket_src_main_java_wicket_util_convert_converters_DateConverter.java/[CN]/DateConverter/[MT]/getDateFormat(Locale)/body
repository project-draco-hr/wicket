{
  if (locale == null) {
    locale=Locale.getDefault();
  }
  DateFormat dateFormat=dateFormats.get(locale);
  if (dateFormat == null) {
    dateFormat=DateFormat.getDateInstance(DateFormat.SHORT,locale);
    dateFormat.setLenient(lenient);
    dateFormats.put(locale,dateFormat);
  }
  return dateFormat;
}
