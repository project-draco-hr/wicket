{
  add(new NavigationPanel("mainNavigation","LinkOMatic example"));
  final Link actionLink=new Link("actionLink"){
    public void linkClicked(    final RequestCycle cycle){
      linkClickCount++;
      cycle.setRedirect(true);
    }
  }
;
  actionLink.add(new Label("linkClickCount",this,"linkClickCount"));
  add(actionLink);
  add(new ExternalPageLink("page1Link",Page1.class));
  add(new ExternalPageLink("page3Link",Page3.class).setParameter("id",3));
  add(new PageLink("bookDetailsLink",new IPageLink(){
    public Page getPage(){
      return new BookDetails(new Book("The Hobbit"));
    }
    public Class getPageClass(){
      return BookDetails.class;
    }
  }
));
  add(new PageLink("bookDetailsLink2",new IPageLink(){
    public Page getPage(){
      return new BookDetails(new Book("Inside The Matrix"));
    }
    public Class getPageClass(){
      return BookDetails.class;
    }
  }
));
  add(new ImageMap("imageMap").addRectangleLink(0,0,100,100,new ExternalPageLink("page1",Page1.class)).addCircleLink(160,50,35,new ExternalPageLink("page2",Page2.class)).addPolygonLink(new int[]{212,79,241,4,279,54,212,79},new ExternalPageLink("page3",Page3.class)));
  PopupSpecification popupSpec=new PopupSpecification().setHeight(100).setWidth(100);
  add(new ExternalPageLink("popupLink",Page1.class).setPopupSpecification(popupSpec));
  add(new SimpleHref("google","http://www.google.com","Click this link to go to Google"));
}
