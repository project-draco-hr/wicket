{
  if (!getFlag(FLAG_ATTACHED)) {
    setFlag(FLAG_ATTACHING,true);
    onAttach();
    if (getFlag(FLAG_ATTACHING)) {
      throw new IllegalStateException(Component.class.getName() + " has not been properly attached. Something in the hierarchy of " + getClass().getName()+ " has not called super.onAtach() in the override of onAttach() method");
    }
    setFlag(FLAG_ATTACHED,true);
  }
  attachChildren();
}
