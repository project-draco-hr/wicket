{
  IModel nested=model;
  while (nested != null && nested instanceof INestedModelContainer) {
    final IModel next=((INestedModelContainer)nested).getNestedModel();
    if (nested == next) {
      throw new WicketRuntimeException("Model for " + nested + " is self-referential");
    }
    nested=next;
  }
  return nested;
}
