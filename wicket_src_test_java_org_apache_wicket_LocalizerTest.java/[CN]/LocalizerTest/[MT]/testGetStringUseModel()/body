{
  HashMap<String,String> model=new HashMap<String,String>();
  model.put("user","juergen");
  Assert.assertEquals("Expected string should be returned","Welcome, juergen",localizer.getString("test.substitute",null,new PropertyModel<String>(model,null),"DEFAULT {user}"));
  Assert.assertEquals("Expected string should be returned","DEFAULT juergen",localizer.getString("test.substituteDoesNotExist",null,new PropertyModel<String>(model,null),"DEFAULT ${user}"));
}
