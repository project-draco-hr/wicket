{
  if (object == null) {
    return null;
  }
 else {
    try {
      final ByteArrayOutputStream out=new ByteArrayOutputStream(256);
      ClassRecordingObjectOutputStream oos=new ClassRecordingObjectOutputStream(out);
      oos.writeObject(object);
      ClassRecordingObjectInputStream ois=new ClassRecordingObjectInputStream(new ByteArrayInputStream(out.toByteArray()),oos.getUsedClasses());
      return (T)ois.readObject();
    }
 catch (    ClassNotFoundException e) {
      throw new WicketRuntimeException("Internal error cloning object",e);
    }
catch (    IOException e) {
      throw new WicketRuntimeException("Internal error cloning object",e);
    }
  }
}
