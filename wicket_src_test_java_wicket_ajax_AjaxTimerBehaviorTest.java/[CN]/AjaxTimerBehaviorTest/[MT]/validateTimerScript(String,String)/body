{
  String quotedRegex=Pattern.quote(updateScript);
  Pattern pat=Pattern.compile(quotedRegex,Pattern.DOTALL);
  Matcher mat=pat.matcher(document);
  int count=0;
  while (mat.find()) {
    ++count;
  }
  assertEquals("There should be 1 and only 1 script in the markup for this behavior," + "but " + count + " were found",1,count);
}
