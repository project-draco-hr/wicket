{
  if (isBodyTag(fragment)) {
    return fragment;
  }
  for (  MarkupElement element : fragment) {
    if (element instanceof MarkupFragment) {
      MarkupFragment frag=(MarkupFragment)element;
      frag=getBodyTag(frag);
      if (frag != null) {
        return frag;
      }
    }
  }
  return null;
}
