{
  page.beforeCallComponent(component,method);
  try {
    method.invoke(component,new Object[]{});
  }
 catch (  InvocationTargetException e) {
    if (e.getTargetException() instanceof AbstractRestartResponseException) {
      throw (RuntimeException)e.getTargetException();
    }
    throw new WicketRuntimeException("method " + method.getName() + " of "+ method.getDeclaringClass()+ " targetted at component "+ component+ " threw an exception",e);
  }
catch (  Exception e) {
    throw new WicketRuntimeException("method " + method.getName() + " of "+ method.getDeclaringClass()+ " targetted at component "+ component+ " threw an exception",e);
  }
 finally {
    page.afterCallComponent(component,method);
  }
}
