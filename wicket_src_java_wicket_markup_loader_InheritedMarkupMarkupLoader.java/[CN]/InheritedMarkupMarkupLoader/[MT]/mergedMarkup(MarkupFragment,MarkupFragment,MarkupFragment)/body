{
  if (log.isDebugEnabled()) {
    final String derivedResource=Strings.afterLast(derivedMarkup.getMarkup().getResource().toString(),'/');
    final String baseResource=Strings.afterLast(baseMarkup.getMarkup().getResource().toString(),'/');
    log.debug("Merge markup: derived markup: " + derivedResource + "; base markup: "+ baseResource);
  }
  MarkupFragment mergedMarkup=merge(derivedMarkup,baseMarkup,extendFragment);
  mergedMarkup=mergedMarkup.translateFlatIntoTreeStructure();
  mergedMarkup.makeImmutable();
  if (log.isDebugEnabled()) {
    log.debug("Merged markup: " + mergedMarkup.toString());
  }
  return mergedMarkup;
}
