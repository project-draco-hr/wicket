{
  BookmarkablePageLink<MockPageWithLink> link=new BookmarkablePageLink<MockPageWithLink>("link",MockPageWithLink.class);
  link.getPageParameters().set("urlEscapeNeeded","someone's ^b%a&d pa\"rameter");
