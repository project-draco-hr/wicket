{
  if (Strings.isEmpty(markupId)) {
    throw new IllegalArgumentException("markupId cannot be empty");
  }
  if (component == null) {
    throw new IllegalArgumentException("component cannot be null");
  }
 else   if (component instanceof Page) {
    throw new IllegalArgumentException("component cannot be a page");
  }
 else   if (component instanceof AbstractRepeater) {
    throw new IllegalArgumentException("Component " + component.getClass().getName() + " has been added to the target. This component is a repeater and cannot be repainted via ajax directly. Instead add its parent or another markup container higher in the hieararchy.");
  }
  markupIdToComponent.put(markupId,component);
}
