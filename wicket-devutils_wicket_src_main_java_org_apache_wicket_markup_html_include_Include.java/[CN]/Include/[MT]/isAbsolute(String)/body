{
  boolean absolute=false;
  if (url != null && url.length() > 0) {
    int colonPos=url.indexOf(":");
    if (colonPos > 0) {
      absolute=true;
      for (int i=0; i < colonPos; i++) {
        if (VALID_SCHEME_CHARS.indexOf(url.charAt(i)) == -1) {
          absolute=false;
          break;
        }
      }
    }
 else     if (url.charAt(0) == '/') {
      absolute=true;
    }
  }
  return absolute;
}
