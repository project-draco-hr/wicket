{
  final AuthorizeAction authorizeAction=component.getClass().getAnnotation(AuthorizeAction.class);
  if (authorizeAction != null) {
    if (!check(action,authorizeAction)) {
      return false;
    }
  }
  final AuthorizeActions authorizedActions=component.getClass().getAnnotation(AuthorizeActions.class);
  if (authorizedActions != null) {
    for (    final AuthorizeAction a : authorizedActions.actions()) {
      if (!check(action,a)) {
        return false;
      }
    }
  }
  return true;
}
