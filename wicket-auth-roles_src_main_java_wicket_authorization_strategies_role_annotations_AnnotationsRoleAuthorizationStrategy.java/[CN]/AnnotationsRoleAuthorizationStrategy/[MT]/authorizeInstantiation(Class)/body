{
  boolean authorized=true;
  Package annotPackage=componentClass.getPackage();
  if (annotPackage != null) {
    AuthorizedRoles packageRolesAllowed=(AuthorizedRoles)annotPackage.getAnnotation(AuthorizedRoles.class);
    if (packageRolesAllowed != null) {
      authorized=hasAny(packageRolesAllowed.value());
    }
  }
  AuthorizedRoles classRolesAllowed=(AuthorizedRoles)componentClass.getAnnotation(AuthorizedRoles.class);
  if (classRolesAllowed != null) {
    authorized=hasAny(classRolesAllowed.value());
  }
  return authorized;
}
