{
  for (  Class<?> c : klass.getInterfaces()) {
    if (hasSecureAnnotation(c)) {
      return true;
    }
  }
  if (klass.getAnnotation(RequireHttps.class) != null) {
    return true;
  }
  if (klass.getSuperclass() != null) {
    return hasSecureAnnotation(klass.getSuperclass());
  }
 else {
    return false;
  }
}
