{
  String path=pathToTranslate;
  URL url=null;
  if (path.startsWith("file:") || path.startsWith("http:") || path.startsWith("https:")|| path.startsWith("ftp:")|| path.startsWith("jar:")) {
    url=new URL(path);
  }
 else   if (servletContext != null) {
    url=getServletContextURL(servletContext,path);
  }
 else {
    url=getClasspathURL(caller,path);
  }
  return url;
}
