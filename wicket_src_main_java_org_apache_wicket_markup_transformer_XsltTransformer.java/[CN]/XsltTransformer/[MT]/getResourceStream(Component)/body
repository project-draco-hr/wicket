{
  final IResourceStream resourceStream;
  String filePath=xslFile;
  if (filePath == null) {
    filePath=component.findParentWithAssociatedMarkup().getClass().getPackage().getName().replace('.','/') + "/" + component.getId();
  }
  resourceStream=Application.get().getResourceSettings().getResourceStreamLocator().locate(getClass(),filePath,component.getStyle(),component.getLocale(),XsltTransformer.extension);
  return resourceStream;
}
