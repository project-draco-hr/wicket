{
  if (value == null) {
    return null;
  }
  if (value instanceof Short) {
    return (value);
  }
 else   if (value instanceof Number) {
    return new Short(((Number)value).shortValue());
  }
  try {
    return (new Short(value.toString()));
  }
 catch (  Exception e) {
    throw new ConversionException(e);
  }
}
