{
  if (clazz == null) {
    return null;
  }
  IPropertiesFactory propertiesFactory=Application.get().getResourceSettings().getPropertiesFactory();
  while (true) {
    Package pkg=clazz.getPackage();
    String packageName=(pkg == null) ? "" : pkg.getName();
    packageName=packageName.replace('.','/');
    do {
      String path=filename;
      if (packageName.length() > 0) {
        path=packageName + "/" + path;
      }
      IResourceNameIterator iter=newResourceNameIterator(path,locale,style,variation);
      while (iter.hasNext()) {
        String newPath=iter.next();
        Properties props=propertiesFactory.load(clazz,newPath);
        if (props != null) {
          String value=props.getString(key);
          if (value != null) {
            return value;
          }
        }
      }
      packageName=Strings.beforeLast(packageName,'/');
    }
 while (packageName.length() > 0);
    clazz=clazz.getSuperclass();
    if (clazz == null) {
      break;
    }
  }
  return null;
}
