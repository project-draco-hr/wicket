{
  if (page instanceof WebPage) {
    ((WebPage)page).beforeCallComponent(component,method);
  }
  try {
    method.invoke(component,new Object[]{});
  }
 catch (  Exception e) {
    throw new WicketRuntimeException("ethod " + method.getName() + " of "+ method.getDeclaringClass()+ "targetted at component "+ component+ " threw an exception",e);
  }
 finally {
    if (page instanceof WebPage) {
      ((WebPage)page).afterCallComponent(component,method);
    }
  }
}
