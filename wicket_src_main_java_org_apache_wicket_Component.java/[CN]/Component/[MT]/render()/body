{
  RuntimeException exception=null;
  try {
    MarkupContainer parent=getParent();
    if ((parent == null) || (parent.getFlag(FLAG_RENDERING) == false)) {
      prepareForRender();
    }
    render(null);
  }
 catch (  final RuntimeException ex) {
    exception=ex;
  }
 finally {
    try {
      afterRender();
    }
 catch (    RuntimeException ex2) {
      if (exception == null) {
        exception=ex2;
      }
    }
  }
  if (exception != null) {
    throw exception;
  }
}
