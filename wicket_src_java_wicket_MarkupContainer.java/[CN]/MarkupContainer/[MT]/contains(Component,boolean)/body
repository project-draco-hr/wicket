{
  if (component == null) {
    throw new IllegalArgumentException("argument component may not be null");
  }
  if (recurse) {
    for (Component current=component; current != null; ) {
      final MarkupContainer parent=current.getParent();
      if (parent == this) {
        return true;
      }
      current=parent;
    }
    return false;
  }
 else {
    return component.getParent() == this;
  }
}
