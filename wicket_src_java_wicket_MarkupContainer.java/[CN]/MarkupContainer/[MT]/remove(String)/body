{
  final Component component=get(id);
  if (component != null) {
    childForName.remove(id);
    final Page page=findPage();
    if (page != null) {
      page.componentRemoved(component);
    }
  }
 else {
    throw new WicketRuntimeException("Unable to find a component with id '" + id + "' to remove");
  }
}
