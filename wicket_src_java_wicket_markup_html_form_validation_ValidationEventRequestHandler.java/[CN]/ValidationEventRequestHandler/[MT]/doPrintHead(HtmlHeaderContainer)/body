{
  final String id="f" + String.valueOf(formComponent.hashCode());
  String handlerId=getId();
  final String url=formComponent.urlFor(IEventRequestListener.class) + "&id=" + handlerId;
  final String path=formComponent.getPath();
  String s="<script language=\"JavaScript\">\n" + "\tonloads.push(" + id + ");\n"+ "\tfunction "+ id+ "() {\n"+ "\t\tajaxEngine.registerRequest( '"+ id+ "', '"+ url+ "' );\n"+ "\t}\n"+ "\tfunction validate(field) {\n"+ "\t\tajaxEngine.sendRequest('"+ id+ "',\""+ path+ "=\"+"+ "field.value);\n"+ "\t}\n"+ "</script>";
  container.getResponse().write(s);
}
