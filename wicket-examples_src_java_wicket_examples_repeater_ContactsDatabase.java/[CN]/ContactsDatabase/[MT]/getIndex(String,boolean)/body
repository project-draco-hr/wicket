{
  if (prop == null) {
    return fnameIdx;
  }
  if (prop.equals("firstName")) {
    return (asc) ? fnameIdx : fnameDescIdx;
  }
 else   if (prop.equals("lastName")) {
    return (asc) ? lnameIdx : lnameDescIdx;
  }
  throw new RuntimeException("uknown sort option [" + prop + "]. valid options: [firstName] , [lastName]");
}
