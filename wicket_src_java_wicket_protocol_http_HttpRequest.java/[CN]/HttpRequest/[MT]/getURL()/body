{
  String url=servletRequest.getContextPath() + servletRequest.getServletPath();
  final String pathInfo=servletRequest.getPathInfo();
  if (pathInfo != null) {
    url+=pathInfo;
  }
  final String queryString=servletRequest.getQueryString();
  if (queryString != null) {
    url+=("?" + queryString);
  }
  return url;
}
