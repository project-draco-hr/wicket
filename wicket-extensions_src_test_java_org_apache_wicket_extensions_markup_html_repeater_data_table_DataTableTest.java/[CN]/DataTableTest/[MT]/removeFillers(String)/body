{
  doc=doc.replaceAll("(?s)<span .*?>.*?</span>","<x/>");
  doc=doc.replaceAll("(?s)<div .*?>.*?</div>","<x/>");
  doc=doc.replaceAll("(?s)<a .*?>.*?</a>","<x/>");
  doc=doc.replaceAll("(?s)>\\s*?[\\n\\r]+\\s*?</","><x/></");
  doc=doc.replaceAll("(?s)[\\n\\r]+\\s*?([\\n\\r]+)","\r\n");
  doc=doc.replaceAll("(<x/>)+","<x/>");
  return doc;
}
