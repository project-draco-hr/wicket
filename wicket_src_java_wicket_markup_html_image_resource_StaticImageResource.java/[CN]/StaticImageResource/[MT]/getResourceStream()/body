{
  if (resource == null) {
    this.resource=RequestCycle.get().getApplication().getResourceLocator().locate(absolutePath,style,locale,null);
    if (this.resource == null) {
      throw new WicketRuntimeException("Unable to find static image resource [path = " + absolutePath + ", style = "+ style+ ", locale = "+ locale+ "]");
    }
  }
  return resource;
}
