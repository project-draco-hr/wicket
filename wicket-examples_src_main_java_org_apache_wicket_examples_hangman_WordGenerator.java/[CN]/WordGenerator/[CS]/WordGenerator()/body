{
  try {
    final IResourceStream resource=new ResourceStreamLocator().locate(null,"org/apache/wicket/examples/hangman/WordList",null,null,Locale.getDefault(),".txt",false);
    final String wordlist=Streams.readString(resource.getInputStream());
    words=Arrays.asList(wordlist.split("\\s+"));
    shuffle();
  }
 catch (  IOException e) {
    throw new RuntimeException("Couldn't read word list");
  }
catch (  ResourceStreamNotFoundException e) {
    throw new RuntimeException("Couldn't read word list");
  }
}
