{
  File sessionDir=new File(getWorkDir(),sessionId);
  sessionDir.mkdirs();
  File pageFile=getPageFile(page.getNumericId(),page.getCurrentVersionNumber(),sessionDir);
  page.detach();
  FileOutputStream fos=null;
  try {
    final ByteArrayOutputStream out=new ByteArrayOutputStream();
    try {
      new ObjectOutputStream(out).writeObject(page);
    }
  finally {
      out.close();
    }
    byte[] bytes=out.toByteArray();
    fos=new FileOutputStream(pageFile);
    ByteBuffer bb=ByteBuffer.wrap(bytes);
    fos.getChannel().write(bb);
  }
 catch (  Exception e) {
    log.error("Error saving page " + page.getId() + " with version "+ page.getCurrentVersionNumber()+ " for the sessionid "+ sessionId,e);
  }
 finally {
    try {
      if (fos != null) {
        fos.close();
      }
    }
 catch (    IOException ex) {
    }
  }
}
