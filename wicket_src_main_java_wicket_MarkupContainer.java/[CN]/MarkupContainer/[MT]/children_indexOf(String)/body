{
  if (children instanceof Component) {
    if (((Component<?>)children).getId().equals(id)) {
      return 0;
    }
  }
 else {
    if (children != null) {
      final Component<?>[] components=(Component[])children;
      for (int i=0; i < components.length; i++) {
        if (components[i].getId().equals(id)) {
          return i;
        }
      }
    }
  }
  return -1;
}
