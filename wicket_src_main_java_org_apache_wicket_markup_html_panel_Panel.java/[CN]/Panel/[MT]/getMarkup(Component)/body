{
  IMarkupFragment markup=getAssociatedMarkup();
  if (markup == null) {
    throw new MarkupNotFoundException("Failed to find markup file associated with panel. Panel: " + this.toString());
  }
  int index=markup.findComponentIndex("_panel",0);
  if (index == -1) {
    throw new MarkupNotFoundException("Expected to find <wicket:panel> in associated markup file. Markup: " + markup.toString());
  }
  if (child == null) {
    return new MarkupFragment(markup,index);
  }
  IMarkupFragment childMarkup=markup.find(child.getId(),index);
  if (childMarkup != null) {
    return childMarkup;
  }
  return findMarkupInAssociatedFileHeader(markup,child);
}
