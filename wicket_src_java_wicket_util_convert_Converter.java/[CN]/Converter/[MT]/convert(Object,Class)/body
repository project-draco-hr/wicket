{
  if (value == null) {
    return null;
  }
  if (getConvertEmptyInputStringToNull() && Strings.isEmpty(value.toString())) {
    return null;
  }
  if (c == null) {
    throw new IllegalArgumentException("Class cannot be null");
  }
  if (c.isAssignableFrom(value.getClass())) {
    return value;
  }
  final ITypeConverter converter=get(c);
  if (converter == null) {
    return defaultConverter.convert(value,c);
  }
  try {
    return converter.convert(value,locale);
  }
 catch (  ConversionException e) {
    throw e.setConverter(this);
  }
}
