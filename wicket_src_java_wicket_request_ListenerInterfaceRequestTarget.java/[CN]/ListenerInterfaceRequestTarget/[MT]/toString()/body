{
  StringBuffer b=new StringBuffer().append(getPage().toString()).append("->").append(getComponent().getId()).append("->").append(getListenerMethod().getDeclaringClass()).append(".").append(getListenerMethod().getName());
  if (getBehaviourId() != null) {
    b.append(" (behaviour ").append(getBehaviourId()).append(")");
  }
  return b.toString();
}
