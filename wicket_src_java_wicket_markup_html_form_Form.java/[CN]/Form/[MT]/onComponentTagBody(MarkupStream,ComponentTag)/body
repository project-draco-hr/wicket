{
  String nameAndId=getHiddenFieldId();
  AppendingStringBuffer buffer=new AppendingStringBuffer("<input type=\"hidden\" name=\"").append(nameAndId).append("\" id=\"").append(nameAndId).append("\" />");
  getResponse().write(buffer);
  if (defaultButton != null && defaultButton.isVisibleInHierarchy() && defaultButton.isEnabled()) {
    appendDefaultButtonField(markupStream,openTag);
  }
  super.onComponentTagBody(markupStream,openTag);
}
