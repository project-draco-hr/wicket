{
  validateRequired();
  if (!hasError()) {
    convertAndValidate();
    if (!hasError()) {
      validate();
    }
  }
  if (hasError()) {
    markFormComponentsInvalid();
    onError();
    return false;
  }
 else {
    markFormComponentsValid();
    beforeUpdateFormComponentModels();
    updateFormComponentModels();
    persistFormComponentData();
    return true;
  }
}
