{
  Button button=(Button)getPage().visitChildren(Button.class,new IVisitor(){
    public Object component(    final Component component){
      final Button button=(Button)component;
      if (button.getForm() == Form.this && (getRequest().getParameter(button.getInputName()) != null || getRequest().getParameter(button.getInputName() + ".x") != null)) {
        if (!button.isVisible()) {
          throw new WicketRuntimeException("Submit Button " + button.getInputName() + " (path="+ button.getPageRelativePath()+ ") is not visible");
        }
        return button;
      }
      return CONTINUE_TRAVERSAL;
    }
  }
);
  return button;
}
