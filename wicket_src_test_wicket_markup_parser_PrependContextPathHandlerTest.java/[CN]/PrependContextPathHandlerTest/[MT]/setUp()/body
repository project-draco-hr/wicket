{
  application=new MockWebApplication(null){
    public MarkupParser newMarkupParser(    final MarkupContainer container){
      final MarkupParser parser=new MarkupParser(container,new XmlPullParser(getSettings().getDefaultMarkupEncoding())){
        public void initFilterChain(){
          appendMarkupFilter(new PrependContextPathHandler());
        }
      }
;
      parser.configure(getSettings());
      return parser;
    }
  }
;
}
