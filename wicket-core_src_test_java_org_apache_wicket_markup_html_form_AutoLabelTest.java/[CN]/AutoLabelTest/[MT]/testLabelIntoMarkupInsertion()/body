{
class MyTestPage extends TestPage {
    private static final long serialVersionUID=1L;
    public MyTestPage(    String labelMarkup){
      super("<label wicket:for='t'>" + labelMarkup + "</label>");
      field.setLabel(Model.of("t"));
    }
  }
  assertRendered(new MyTestPage("<span class='label-text'>text</span>"),"<span class='label-text'>t</span>");
  assertRendered(new MyTestPage(" <div> a </div> <span class='label-text'>text</span> b ")," <div> a </div> <span class='label-text'>t</span> b ");
  assertRendered(new MyTestPage(" a <div> b <span class='label-text'>text</span> c </div> d")," a <div> b <span class='label-text'>t</span> c </div> d");
  assertRendered(new MyTestPage("<span class='label-text'>text</span><span class='label-text'>text</span>"),"<span class='label-text'>t</span><span class='label-text'>text</span>");
  assertRendered(new MyTestPage(" text ")," text ");
  assertRendered(new MyTestPage(""),"></label>");
  assertRendered(new MyTestPage("<span class='label-text'></span>"),"<span class='label-text'>t</span>");
  assertRendered(new MyTestPage("<span class='label-text'/>"),"<span class='label-text'>t</span>");
  assertRendered(new MyTestPage("<span class='foo label-text bar'/>"),"<span class='foo label-text bar'>t</span>");
}
