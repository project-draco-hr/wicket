{
  if (classLoader == null) {
    return null;
  }
  if (log.isDebugEnabled()) {
    log.debug("Attempting to locate resource '" + path + "' using classloader "+ classLoader);
  }
  final URL url=classLoader.getResource(path);
  if (url != null) {
    return new UrlResourceStream(url);
  }
  return null;
}
