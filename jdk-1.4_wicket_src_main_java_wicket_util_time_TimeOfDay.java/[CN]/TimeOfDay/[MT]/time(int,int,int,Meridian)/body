{
  if (meridian == PM) {
    if (hour == 12) {
      return militaryTime(12,minute,second);
    }
 else {
      return militaryTime(hour + 12,minute,second);
    }
  }
 else {
    if (hour == 12) {
      return militaryTime(0,minute,second);
    }
 else {
      return militaryTime(hour,minute,second);
    }
  }
}
