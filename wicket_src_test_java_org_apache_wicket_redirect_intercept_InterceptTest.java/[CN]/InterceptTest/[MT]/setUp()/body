{
  tester=new WicketTester(new DummyApplication(){
    @Override protected void init(){
      getSecuritySettings().setAuthorizationStrategy(new IAuthorizationStrategy(){
        private boolean block=true;
        public boolean isActionAuthorized(        Component<?> component,        Action action){
          return true;
        }
        public boolean isInstantiationAuthorized(        Class<? extends Component<?>> componentClass){
          if (block && (componentClass == TargetPage.class || componentClass == HomePage.class)) {
            block=false;
            throw new RestartResponseAtInterceptPageException(InterceptPage.class);
          }
          return true;
        }
      }
);
      super.init();
    }
    @Override public Class<? extends Page<?>> getHomePage(){
      return HomePage.class;
    }
  }
);
}
