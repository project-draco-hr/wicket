{
  final Component component=getLastRenderedPage().get(path);
  if (component == null) {
    Assert.fail("path: '" + path + "' does no exist for page: "+ Classes.simpleName(getLastRenderedPage().getClass()));
    return component;
  }
  if (component.isVisibleInHierarchy()) {
    return component;
  }
  return null;
}
