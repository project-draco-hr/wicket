{
  String id=getId();
  final StringBuffer inputName=new StringBuffer(id.length());
  Component c=this;
  while (true) {
    inputName.insert(0,id);
    c=c.getParent();
    if (c == null || c instanceof Form || c instanceof Page) {
      break;
    }
    inputName.insert(0,':');
    id=c.getId();
  }
  return inputName.toString();
}
