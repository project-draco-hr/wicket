{
  final MarkupParser parser=new MarkupParser(application,new XmlPullParser(application.getMarkupSettings().getDefaultMarkupEncoding())){
    public void initFilterChain(){
      if (filters != null) {
        for (int i=0; i < filters.length; i++) {
          appendMarkupFilter(filters[i]);
        }
      }
    }
  }
;
  return parser;
}
