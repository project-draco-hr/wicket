{
  add(new Label(this,"guessesRemaining",Integer.toString(getGame().getGuessesRemaining())));
  add(new Label(this,"currentWord",getGame().getWord().asString()));
  add(new Link(this,"playAgain"){
    public void onClick(){
      getGame().newGame();
      setResponsePage(new Guess());
    }
  }
);
}
