{
  final Response response=getResponse();
  response.setContentType("text/" + getMarkupType() + "; charset="+ getApplicationSettings().getResponseRequestEncoding());
  final MarkupStream markupStream=findMarkupStream();
  if ((markupStream != null) && (markupStream.getXmlDeclaration() != null) && (getApplicationSettings().getStripXmlDeclarationFromOutput() == false)) {
    response.write("<?xml version='1.0' encoding='" + getApplicationSettings().getResponseRequestEncoding() + "'?>");
  }
  response.setLocale(getSession().getLocale());
}
