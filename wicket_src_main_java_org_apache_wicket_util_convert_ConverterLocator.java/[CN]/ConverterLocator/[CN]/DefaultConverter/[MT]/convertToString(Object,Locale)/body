{
  if (value == null || "".equals(value)) {
    return "";
  }
  final Object converted=Objects.convertValue(value,String.class);
  if (converted == null) {
    return "";
  }
 else   if (converted instanceof String) {
    return (String)converted;
  }
 else {
    throw new ConversionException("Could not convert object of type: " + value.getClass() + " to string. Possible its #toString() returned null. "+ "Either install a custom converter (see IConverterLocator) or "+ "override #toString() to return a non-null value.");
  }
}
