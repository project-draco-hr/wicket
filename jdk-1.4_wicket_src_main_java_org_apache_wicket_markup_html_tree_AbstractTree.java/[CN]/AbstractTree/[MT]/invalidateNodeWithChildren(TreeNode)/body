{
  if (dirtyAll == false) {
    TreeItem item=(TreeItem)nodeToItemMap.get(node);
    if (item != null) {
      visitItemChildren(item,new IItemCallback(){
        public void visitItem(        TreeItem item){
          removeItem(item);
        }
      }
);
      item.setChildren(null);
      dirtyItems.add(item);
    }
  }
}
