{
  int i;
  mean=0;
  for (i=0; i < n; i++) {
    mean+=x[i];
  }
  mean/=n;
  variance=variance();
  stdev=stdev();
  double sumxx=0;
  variance=0;
  for (i=0; i < n; i++) {
    sumxx+=x[i] * x[i];
  }
  if (n > 1) {
    variance=(sumxx - n * mean * mean) / (n - 1);
  }
  stdev=Math.sqrt(variance);
}
