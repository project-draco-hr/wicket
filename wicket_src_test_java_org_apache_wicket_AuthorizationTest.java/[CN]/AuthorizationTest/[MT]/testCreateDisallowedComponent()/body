{
  tester.getApplication().getSecuritySettings().setAuthorizationStrategy(new DummyAuthorizationStrategy(){
    @Override public <T extends IRequestableComponent>boolean isInstantiationAuthorized(    Class<T> componentClass){
      return false;
    }
  }
);
