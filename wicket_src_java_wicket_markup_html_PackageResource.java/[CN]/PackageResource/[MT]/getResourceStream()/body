{
  if (resourceStream == null) {
    this.resourceStream=Application.get().getResourceStreamLocator().locate(scope.getClassLoader(),absolutePath,style,locale,null);
    if (this.resourceStream == null) {
      throw new WicketRuntimeException("Unable to find package resource [path = " + absolutePath + ", style = "+ style+ ", locale = "+ locale+ "]");
    }
    this.locale=resourceStream.getLocale();
  }
  return resourceStream;
}
