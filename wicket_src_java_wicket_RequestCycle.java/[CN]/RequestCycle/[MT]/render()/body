{
synchronized (session) {
    session.setApplication(application);
    session.setRequestCycle(this);
    try {
      handleRender();
    }
 catch (    RuntimeException e) {
      Page currentPage=getPage();
      if (currentPage != null) {
        currentPage.reset();
      }
      handleRenderingException(e);
    }
 finally {
      response.close();
      session.setRequestCycle(null);
      threadDetach();
    }
  }
}
