{
  super(id);
  WebMarkupContainer<?> hideInPortlet=new WebMarkupContainer<Void>("hideInPortlet"){
    /** 
 * @see org.apache.wicket.Component#isVisible()
 */
    @Override public boolean isVisible(){
      return !RequestContext.get().isPortletRequest();
    }
  }
;
  add(hideInPortlet);
  hideInPortlet.add(new InspectorBug("inspector",page));
  add(new Label<String>("exampleTitle",exampleTitle));
  Link<?> link=new Link<Void>("sources"){
    @SuppressWarnings("unchecked") @Override public void onClick(){
      setResponsePage(new SourcesPage((Class<? extends Page<?>>)getPage().getClass()));
    }
  }
;
  add(link);
  PopupSettings settings=new PopupSettings(PageMap.forName("sources"),PopupSettings.RESIZABLE);
  settings.setWidth(800);
  settings.setHeight(600);
  settings.setWindowName("sources");
  link.setPopupSettings(settings);
}
