{
  final int oldIndex=this.index;
  addStateChange(new Change(){
    private static final long serialVersionUID=1L;
    public void undo(){
      Item.this.index=oldIndex;
    }
    public String toString(){
      return "IndexChange[component: " + getPath() + ", index: "+ oldIndex+ "]";
    }
  }
);
  this.index=index;
}
