{
  if (dirtyAll == false) {
    TreeItem item=nodeToItemMap.get(node);
    if (item != null) {
      visitItemChildren(item,new IItemCallback(){
        @Override public void visitItem(        TreeItem item){
          removeItem(item);
        }
      }
);
      item.setChildren(null);
      if (!dirtyItems.contains(item)) {
        dirtyItems.add(item);
      }
    }
  }
}
