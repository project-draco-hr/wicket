{
  int remaining=count;
  int pos=0;
  byte newbuf[]=new byte[count];
  for (int i=0; i < buffers.size(); i++) {
    byte[] buf=getBuffer(i);
    int c=Math.min(buf.length,remaining);
    System.arraycopy(buf,0,newbuf,pos,c);
    pos+=c;
    remaining-=c;
    if (remaining == 0) {
      break;
    }
  }
  return newbuf;
}
