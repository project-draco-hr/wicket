{
  AppendingStringBuffer buffer=new AppendingStringBuffer();
  String value=defaultButton.getModelObjectAsString();
  if (value == null || "".equals(value)) {
    value=defaultButton.getMarkupAttributes().getString("value");
  }
  buffer.append("<input type=\"submit\" value=\"").append(value).append("\" name=\"").append(defaultButton.getInputName()).append("\"");
  buffer.append("style=\"width: 0px; height: 0px; position: absolute; left:-1000px;\"");
  buffer.append(" />");
  getResponse().write(buffer);
}
