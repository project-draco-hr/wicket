{
  maybeCreateJar();
  checkComponentTag(tag,"applet");
  tag.put("code",HostApplet.class.getName() + ".class");
  tag.put("archive",SharedResources.path(getApplication(),Applet.class,appletCodeClass.getName(),null,null));
  final int width=getWidth();
  if (width != -1) {
    tag.put("width",width);
  }
  final int height=getHeight();
  if (height != -1) {
    tag.put("height",height);
  }
  replaceComponentTagBody(findMarkupStream(),tag,"<param name=\"component\" value=\"" + urlFor(IResourceListener.class) + "\"/>");
  super.onComponentTag(tag);
}
