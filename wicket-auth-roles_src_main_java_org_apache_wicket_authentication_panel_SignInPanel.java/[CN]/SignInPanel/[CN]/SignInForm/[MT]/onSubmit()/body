{
  IAuthenticationStrategy strategy=getApplication().getSecuritySettings().getAuthenticationStrategy();
  if (signIn(getUsername(),getPassword())) {
    onSignInSucceeded();
    if (rememberMe == true) {
      strategy.save(username,password);
    }
 else {
      strategy.remove();
    }
  }
 else {
    onSignInFailed();
    strategy.remove();
  }
}
