{
  final Component component=(Component)rcomponent;
  if (!component.canCallListenerInterface()) {
    log.info("component not enabled or visible; ignoring call. Component: " + component);
    throw new ListenerInvocationNotAllowedException(this,component,null,"Component rejected interface invocation");
  }
  try {
    method.invoke(component);
  }
 catch (  InvocationTargetException e) {
    if (e.getTargetException() instanceof ReplaceHandlerException || e.getTargetException() instanceof AuthorizationException || e.getTargetException() instanceof WicketRuntimeException) {
      throw (RuntimeException)e.getTargetException();
    }
    throw new WicketRuntimeException("Method " + method.getName() + " of "+ method.getDeclaringClass()+ " targeted at component "+ component+ " threw an exception",e);
  }
catch (  Exception e) {
    throw new WicketRuntimeException("Method " + method.getName() + " of "+ method.getDeclaringClass()+ " targeted at component "+ component+ " threw an exception",e);
  }
}
