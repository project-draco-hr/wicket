{
  final String[] bits=value.split("-");
  if (bits.length < 1) {
    return null;
  }
  final String language=bits[0].toLowerCase();
  if (bits.length > 1) {
    final String country=bits[1].toUpperCase();
    return new Locale(language,country);
  }
 else {
    return new Locale(language);
  }
}
