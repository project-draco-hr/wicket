{
  final String expression=ognlExpression(component);
  if (Strings.isEmpty(expression)) {
    return modelObject(component);
  }
  final Object modelObject=modelObject(component);
  if (modelObject != null) {
    try {
      return Ognl.getValue(expression,getContext(component),modelObject,propertyType(component));
    }
 catch (    OgnlException e) {
      throw new WicketRuntimeException("OGNL Exception: expression='" + expression + "'; component='"+ component.getPath()+ "'",e);
    }
  }
  return null;
}
