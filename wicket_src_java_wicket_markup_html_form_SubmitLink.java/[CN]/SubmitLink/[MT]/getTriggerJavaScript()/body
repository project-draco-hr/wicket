{
  Form form=getSubmitLinkForm();
  StringBuffer sb=new StringBuffer(100);
  sb.append("javascript:");
  sb.append("document.getElementById('");
  sb.append(form.getHiddenFieldId());
  sb.append("').name=\'");
  sb.append(getInputName());
  sb.append("';");
  sb.append("document.getElementById('");
  sb.append(form.getJavascriptId());
  sb.append("').submit();");
  return sb.toString();
}
