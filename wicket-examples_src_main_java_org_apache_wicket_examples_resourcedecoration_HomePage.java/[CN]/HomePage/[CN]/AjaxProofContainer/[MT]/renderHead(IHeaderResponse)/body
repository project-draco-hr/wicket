{
  if (getRequestCycle().find(AjaxRequestTarget.class).isPresent()) {
    response.render(CssHeaderItem.forReference(new PackageResourceReference(HomePage.class,"ajax.css")));
    response.render(JavaScriptHeaderItem.forReference(new PackageResourceReference(HomePage.class,"ajax.js")));
    response.render(OnDomReadyHeaderItem.forScript("updatePending();"));
  }
}
