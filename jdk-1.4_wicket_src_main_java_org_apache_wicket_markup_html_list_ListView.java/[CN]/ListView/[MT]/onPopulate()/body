{
  final int size=getViewSize();
  if (size > 0) {
    if (getReuseItems()) {
      final int maxIndex=firstIndex + size;
      for (final Iterator<Component> iterator=iterator(); iterator.hasNext(); ) {
        final ListItem<T> child=(ListItem<T>)iterator.next();
        if (child != null) {
          final int index=child.getIndex();
          if (index < firstIndex || index >= maxIndex) {
            iterator.remove();
          }
        }
      }
    }
 else {
      removeAll();
    }
    boolean hasChildren=size() != 0;
    for (int i=0; i < size; i++) {
      final int index=firstIndex + i;
      ListItem item=null;
      if (hasChildren)       item=(ListItem)get(Integer.toString(index));
      if (item == null) {
        item=newItem(index);
        add(item);
        onBeginPopulateItem(item);
        populateItem(item);
      }
    }
  }
 else {
    removeAll();
  }
}
