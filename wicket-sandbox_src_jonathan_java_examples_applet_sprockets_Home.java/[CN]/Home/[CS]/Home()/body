{
  Form form=new Form("form"){
    protected void onSubmit(){
      System.out.println("Submitted value: " + getValue());
    }
  }
;
  form.add(new Slider("slider",new PropertyModel(Home.this,"value"),0,100));
  form.add(new NumberSpinner("spinner",new PropertyModel(Home.this,"value"),new Integer(0),new Integer(100),new Integer(10)));
  add(form);
}
