{
  final Form form=new Form(this,"form"){
    protected void onSubmit(){
      System.out.println("Slider value: " + getSliderValue());
      System.out.println("Spinner value: " + getSpinnerValue());
    }
  }
;
  new Slider(form,"slider",new PropertyModel(Home.this,"sliderValue"),0,100);
  new NumberSpinner(form,"spinner",new PropertyModel(Home.this,"spinnerValue"),new Integer(0),new Integer(100),new Integer(10));
}
