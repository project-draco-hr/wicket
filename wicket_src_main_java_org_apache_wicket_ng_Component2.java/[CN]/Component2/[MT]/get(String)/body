{
  String first=Strings.firstPathComponent(path,PATH_SEPARATOR);
  String after=Strings.afterFirstPathComponent(path,PATH_SEPARATOR);
  for (  Component2 c : getChildren()) {
    if (first.equals(c.getId())) {
      if (Strings.isEmpty(after)) {
        return c;
      }
 else {
        return c.get(after);
      }
    }
  }
  return null;
}
