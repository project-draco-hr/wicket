{
  final String path=Strings.beforeLast(request.getPath(),'.').substring(1);
  final String extension='.' + Strings.afterLast(request.getPath(),'.');
  if (".css".equalsIgnoreCase(extension) || ".js".equalsIgnoreCase(extension)) {
    final IResourceStream stream=new ClassLoaderResourceStreamLocator().locate(getClass().getClassLoader(),path,session.getStyle(),session.getLocale(),extension);
    if (stream != null) {
      final Resource resource=new Resource(){
        private static final long serialVersionUID=1L;
        public IResourceStream getResourceStream(){
          return stream;
        }
      }
;
      resource.onResourceRequested();
      return 2;
    }
  }
  return 0;
}
