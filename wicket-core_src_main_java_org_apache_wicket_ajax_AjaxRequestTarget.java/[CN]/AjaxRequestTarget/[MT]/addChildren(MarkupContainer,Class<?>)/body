{
  Args.notNull(parent,"parent");
  Args.notNull(childCriteria,"childCriteria");
  parent.visitChildren(childCriteria,new IVisitor<Component,Void>(){
    public void component(    final Component component,    final IVisit<Void> visit){
      add(component);
      visit.dontGoDeeper();
    }
  }
);
}
