{
  IResourceStream resourceStream=Application.get().getResourceSettings().getResourceStreamLocator().locate(scope,absolutePath,style,locale,null);
  if (resourceStream == null) {
    String msg="Unable to find package resource [path = " + absolutePath + ", style = "+ style+ ", locale = "+ locale+ "]";
    log.warn(msg);
    RequestCycle requestCycle=RequestCycle.get();
    if (requestCycle instanceof WebRequestCycle) {
      throw new AbortWithWebErrorCodeException(HttpServletResponse.SC_NOT_FOUND,msg);
    }
 else {
      throw new AbortException();
    }
  }
  this.locale=resourceStream.getLocale();
  return resourceStream;
}
