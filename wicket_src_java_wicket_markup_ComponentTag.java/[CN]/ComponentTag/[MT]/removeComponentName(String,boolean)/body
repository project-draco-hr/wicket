{
  if (xmlTag.isMutable()) {
    this.componentId=null;
    xmlTag.remove(componentNameAttribute);
    if (removeComponentsWithDefaultName) {
      xmlTag.remove(DEFAULT_COMPONENT_NAME_ATTRIBUTE);
    }
  }
 else {
    throw new UnsupportedOperationException("Attempt to clear component name attribute of immutable tag");
  }
}
