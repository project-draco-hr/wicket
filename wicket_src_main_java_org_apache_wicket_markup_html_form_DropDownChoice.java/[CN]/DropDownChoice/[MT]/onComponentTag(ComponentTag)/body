{
  checkComponentTag(tag,"select");
  if (wantOnSelectionChangedNotifications()) {
    Url url=getRequestCycle().urlFor(new ListenerInterfaceRequestHandler(new PageAndComponentProvider(getPage(),this),IOnChangeListener.INTERFACE));
    Form<?> form=findParent(Form.class);
    if (form != null) {
      RequestContext rc=RequestContext.get();
      if (rc.isPortletRequest()) {
      }
      tag.put("onchange",form.getJsForInterfaceUrl(url.toString()));
    }
 else {
      tag.put("onchange","window.location.href='" + url + (url.toString().indexOf('?') > -1 ? "&amp;" : "?")+ getInputName()+ "=' + this.options[this.selectedIndex].value;");
    }
  }
  super.onComponentTag(tag);
}
